package {    // import brightcove api modules    import com.brightcove.api.APIModules;    import com.brightcove.api.CustomModule;    import com.brightcove.api.events.MediaEvent;        import com.brightcove.api.modules.ExperienceModule;    import com.brightcove.api.modules.VideoPlayerModule;    // import flash modules    import flash.events.*;    import flash.display.Stage;    public class KeyPause extends CustomModule {         // reference to modules        private var _experienceModule:ExperienceModule;        private var _videoPlayerModule:VideoPlayerModule;        private var _stage:Stage;        public function KeyPause() {            trace("@project KeyPause");            trace("@author Si Levitas");            trace("@lastModified 2014.06.22");            trace("@version 0.1");        }        override protected function initialize():void {            _experienceModule = player.getModule(APIModules.EXPERIENCE) as ExperienceModule;            _experienceModule.debug("---------------------PLUGIN MESSAGE: KeyPause Loaded---------------------");            _videoPlayerModule = player.getModule(APIModules.VIDEO_PLAYER) as VideoPlayerModule;            _stage = _experienceModule.getStage();            _stage.addEventListener(KeyboardEvent.KEY_DOWN, pausePlayer);        }        private function pausePlayer(e:KeyboardEvent):void {            if (_videoPlayerModule.isPlaying() == true) {                _videoPlayerModule.pause();            } else {                _videoPlayerModule.play();            }        }    }}